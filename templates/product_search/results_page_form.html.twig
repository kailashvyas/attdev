<form  method="GET" action="{{ url('product_results') }}" class="form-inline">
    <input class="form-control" type="hidden" name="search" value="{{ app.request.query.get('search') }}">
    <div class="input-group">
        <div class="col-1">
            <select  class="form-control mr-sm-2" name="resultsPerPage">
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
            </select>
        </div>
        <div class="col-3">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Results per page</button>
        </div>
    </div>
</form>